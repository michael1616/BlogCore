@model BlogCore.Models.Article

@{
    ViewData["Title"] = "Detail Article";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light m-lg-0 container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h4 class="text-primary">@Model.Name</h4>
                </div>
                <div class="col-12 col-md-6 text-md-end">
                    <h4 class="text-muted">Date: @Model.CreationDate</h4>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.ImageUrl" class="img-thumbnail mx-auto d-block"/>
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Return to list</a>
                </div>
            </div>
        </div>
    </div>
</div>