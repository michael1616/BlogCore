@{
    ViewData["Title"] = "Sliders List";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary text-primary">Sliders List</h2>
        </div>
        <div class="col-md-4">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i>Create new slider</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblSlider" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>

    </table>

</div>

@section scripts{

    <script src="~/js/Slider.js"></script>

}