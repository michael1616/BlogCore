@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Edit Slider";
}

<br />
<br />
<h3 class="text-center text-primary">Edit slider</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <input asp-for="IdSlider" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Enter the slider name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="State"></label>
                </div>
                <div class="col-8">
                    <input asp-for="State" class="form-check-input" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="ImageUrl"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadFile" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-4">
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary form-control" asp-route-IdSlider="@Model.IdSlider">Edit</button>
                </div>
                &nbsp;
                <div class="col-md-5">
                    <a asp-action="Index" class="btn btn-success form-control">Return to list</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 pt-3">
            <div style="width: 312px;">
                <img src="@Model.ImageUrl" style="max-width: 100%;max-height: 100%;display: block;border-radius:5px; border: 1px solid #bbb9b9;" />
            </div>
        </div>

    </div>
</form>
