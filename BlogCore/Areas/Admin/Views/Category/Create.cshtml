@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<br />
<br />
<h3 class="text-center text-primary">Create new category</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Enter the category name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="Order"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order" class="form-control" placeholder="Enter the order" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8">
                    <partial name="_ReturnCreate"/>
                </div>
            </div>
        </div>
    </div>
</form>
