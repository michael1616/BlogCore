@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<br />
<br />
<h3 class="text-center text-primary">Edit category</h3>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Enter the category name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="Order"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order" class="form-control" placeholder="Enter the order" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary form-control" asp-route-IdCategory="@Model.IdCategory">Edit</button>
                </div>
                &nbsp;
                <div class="col-md-5">
                    <a asp-action="Index" class="btn btn-success form-control">Return to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
