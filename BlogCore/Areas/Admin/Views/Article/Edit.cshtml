@model BlogCore.Models.ViewModels.ArticleViewModel

@{
    ViewData["Title"] = "Edit Article";
}

<br />
<br />
<h3 class="text-center text-primary">Edit article</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <input asp-for="Article.IdArticle" type="hidden"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Article.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Article.Name" class="form-control" placeholder="Enter the article name" />
                    <span asp-validation-for="Article.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="Article.Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Article.Description" class="form-control" style="height:300px;"></textarea>
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="Article.CategoryId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Article.CategoryId, Model.ListCategories, "-Please select the category-", new {@class = "form-control"})
                    <span asp-validation-for="Article.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="Article.ImageUrl"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadFile" class="form-control" />
                    <span asp-validation-for="Article.ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-5">
                    <button type="submit" class="btn btn-primary form-control" asp-route-IdArticle="@Model.Article.IdArticle">Edit</button>
                </div>
                &nbsp;
                <div class="col-md-5">
                    <a asp-action="Index" class="btn btn-success form-control">Return to list</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 pt-3">
            <div style="width: 312px;">
                <img src="@Model.Article.ImageUrl" style="max-width: 100%;max-height: 100%;display: block;border-radius:5px; border: 1px solid #bbb9b9;" />
            </div>
        </div>

    </div>
</form>

@section scripts{

    <script src="https://cdn.tiny.cloud/1/pg64hg2g4na1whxcd5nrp3vbebci7lohevo2ndje3uh7amwa/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>

        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}